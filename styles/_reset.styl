// Reset

html
  box-sizing: border-box
*, 
*:before,
*:after
  box-sizing: inherit

img
  max-width 100%
  vertical-align: bottom;
  font-size: 0;
  line-height: 0;

figure
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6, p, ul
  margin-top 0
  margin-bottom 0
  
