// Layout

#_saber
  overflow hidden
  background-color var(--page-bgc)

  figure
    margin 0
    margin-top 1rem

  figure + p
    margin-top 1rem
  
.conclusion
  margin-top 4rem
  padding-bottom 2rem
  background-color var(--conclusion-bg)

.next-project
  margin-top: 0.5rem;
  
hr.gradient
  width: 100%;
  position: relative;
  border: none;
  overflow: visible;
  margin-top: 4rem;
  margin-bottom: 0;
  &:before
    content ""
    display block
    position absolute
    width 100vw
    left 50%
    top: 0;
    transform translateX(-50%)
    height 500px
    background-image: linear-gradient(180deg, #EDF1F3 0%, rgba(#fff, 0) 100%);
