// Typography

body
  font-family: 'Work Sans', Helvetica, Arial, sans-serif;
  color var(--text-color)
  font-size 1.125rem
  line-height 1.777777778
  font-weight 400
  letter-spacing -0.005555556em

h1, h2, h3, h4, h5, h6
  color var(--heading-color)
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

p 
  margin-top 0.5rem
  b
    font-weight 600
    
p + p
  margin-top 2rem

a,
.link
  text-decoration none
  color inherit
  white-space nowrap
  font-weight 500
  z-index 1
  transition all 0.1s ease
  position relative
  &:before
    content ""
    position absolute
    left 50%
    bottom 0
    background-color var(--underlineColor)
    height 1px
    width 100%
    z-index -1
    transition all 0.1s ease
    transform translateX(-50%)
    border-radius 2px
  &:hover
    &:before
      width calc(100% + 0.5em)
      height 100%

h1,.h1
  font-size 3.5rem
  line-height 1
  font-weight 800

h2, .h2
  font-size 2rem
  line-height 1.25
  margin-top 4rem
  margin-bottom 0.5rem
  font-weight 800

h3, .h3
  font-size 1.5rem
  line-height 1.666666667
  font-weight 700
  margin-top 3rem
  
ul
  margin-top 0.5rem
  margin-bottom 0.5rem
  padding-left 1rem
  list-style-position: inside

