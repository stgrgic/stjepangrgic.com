// Layout

.grid
  display grid
  grid-column-gap 0.625%
  // grid-column-gap 16px
  grid-row-gap 0
  grid-template-columns: minmax(1rem, 1fr) repeat(15, minmax(0px, 56px)) minmax(1rem, 1fr)
  
  > *
    grid-column 2 / -2
    z-index 1
    //   // grid-row 1/-1
      
  // @media screen and (max-width: 800px)
    // grid-column-gap 0
      
.grid-width
  grid-column 2/ -2

.full-width
  grid-column 1/ -1


