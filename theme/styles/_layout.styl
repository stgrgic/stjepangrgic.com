// Layout

.grid
  display grid
  grid-column-gap 0.625%
  // grid-column-gap 16px
  grid-row-gap 0
  grid-template-columns: minmax(1rem, 1fr) repeat(15, minmax(0px, 56px)) minmax(1rem, 1fr)
  // background-color #ffa
  
  > *
    grid-column 4 / -4
    // z-index 1
    //   // grid-row 1/-1
      
  // @media screen and (max-width: 800px)
    // grid-column-gap 0
      
.grid-width
  grid-column 2/ -2 !important

.full-width
  grid-column 1/ -1 !important

.content-width
  grid-column 3/ -3 !important
  
figure
  margin-bottom 1.5rem
  margin-top 0.5rem
  // margin-top 2.5rem
  
p + figure 
  margin-top 2.5rem
  
figure + h2,
figure + h3
  margin-top 3rem
  
.conclusion
  background-color #FAFAFA
  margin-top 4rem
  border-top 2px solid #F0F0F0
  
.next-project
  margin-top: 1rem;
  margin-bottom: 4rem;
  
.credits
  ul
    list-style none
    padding 0
    font-size 1.25rem
    a:before
      transform rotate(0deg)
      height 0.2em
    // line-height 1.5
  
.center
  margin-left auto
  margin-right auto
  
.gradient
  position relative
  margin-top 4rem
  z-index 2
  &:before
    content ""
    display block
    position absolute
    width 100vw
    left 50%
    transform translateX(-50%)
    height 300px
    border-top 2px solid #DCE2E6
    background-image: linear-gradient(180deg, #F9FBFC 0%, #FFFFFF 100%);
    z-index -1
