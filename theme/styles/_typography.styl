// Google fonts
@import url('https://fonts.googleapis.com/css?family=Barlow:400,500,700&display=swap');

* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: 'Barlow';
  color #222
  // font-size 56px
}

h1, h2, h3, h4, h5, h6 {
  color #000
  font-weight 700
}

h1 {
  font-size 3.5rem
  letter-spacing -0.00625em
  line-height 1.142857143
  margin-top 2rem
  margin-bottom 1rem
}

h2 {
  font-size 32px
  line-height 1.5
  margin-top 2rem
  margin-bottom 0.5rem
}

h3 {
  font-size 1.5rem
  margin-top 2rem
  margin-bottom 0.5rem
}

p, ul, a {
  font-size 1.5rem
  line-height 1.666666667
  font-weight 400
  letter-spacing -0.025em
}
 a {
  font-weight 500
 }

p, ul {
  margin-top 0
  margin-bottom 0.5rem
}

ul {
  list-style-position: inside;
}

a {
  color: #0000EE
